<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="icon_home">
        <item name="android:layout_width">@dimen/unit24</item>
        <item name="android:layout_height">@dimen/unit24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="icon_home_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">@dimen/unit40</item>
        <item name="android:layout_height">@dimen/unit24</item>
        <item name="android:layout_margin">@dimen/unit3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit10</item>
    </style>

    <style name="icon_home_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/unit12</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit12</item>
    </style>

    <style name="text_light_bold_large">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/unit16</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_learn">
        <item name="android:background">@drawable/learn_button_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button_floating_nav">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:tint">@color/colorLightGrey</item>
        <item name="android:layout_margin">@dimen/unit10</item>
    </style>

    <!-- Theme used in custom layout example -->

</resources>
