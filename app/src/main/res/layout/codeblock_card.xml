<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="@dimen/unit120"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/codeblock_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/unit2"
        android:padding="@dimen/unit4"
        android:backgroundTint="@color/md_blue_grey_100"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/unit10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/unit1"
            android:padding="@dimen/unit4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codeblock_text"
                android:visibility="visible"
                android:layout_width="@dimen/unit70"
                android:layout_height="@dimen/unit30"
                android:layout_margin="@dimen/unit3"
                android:gravity="center"
                app:autoSizeMaxTextSize="@dimen/unit24"
                app:autoSizeMinTextSize="@dimen/unit8"
                app:autoSizeStepGranularity="@dimen/unit2"
                app:autoSizeTextType="uniform"
                tool:text="background" />

            <RelativeLayout
                android:id="@+id/codeblock_text_input_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/codeblock_text_edit"
                    android:layout_width="@dimen/unit80"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/codeblock_text_input_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/codeblock_text_edit"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_ok" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/codeblock_delete"
                android:layout_width="@dimen/unit20"
                android:layout_height="@dimen/unit20"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_close" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>