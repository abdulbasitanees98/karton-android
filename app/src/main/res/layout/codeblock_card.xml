<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="@dimen/unit160"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/codeblock_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/unit2"
        android:padding="@dimen/unit4"
        android:backgroundTint="@color/colorDarkGrey"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/unit10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/unit1"
            android:padding="@dimen/unit4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/codeblock_delete"
                android:background="@color/transparent"
                android:layout_width="@dimen/unit20"
                android:layout_height="@dimen/unit20"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_close" />

            <TextView
                style="@style/icon_home_text"
                android:id="@+id/codeblock_text"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit4"
                android:textSize="@dimen/unit16"
                tool:text="background" />

            <LinearLayout
                android:id="@+id/codeblock_text_input_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/codeblock_text_input_button"
                    android:background="@color/transparent"
                    android:layout_width="@dimen/unit20"
                    android:layout_height="@dimen/unit20"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_ok" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/codeblock_text_edit"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_margin="@dimen/unit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>